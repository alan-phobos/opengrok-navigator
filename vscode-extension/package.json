{
  "name": "opengrok-navigator",
  "displayName": "OpenGrok Navigator",
  "description": "Navigate to OpenGrok from VS Code with keyboard shortcuts, search across projects, and view results inline",
  "version": "1.2.0",
  "publisher": "opengrok-navigator",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opengrok/opengrok-navigator"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "opengrok",
    "code search",
    "source code",
    "navigation",
    "cross-reference"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opengrok-navigator.openInOpenGrok",
        "title": "Open in OpenGrok"
      },
      {
        "command": "opengrok-navigator.copyOpenGrokUrl",
        "title": "Copy OpenGrok URL"
      },
      {
        "command": "opengrok-navigator.searchInOpenGrok",
        "title": "Search Current Project in OpenGrok (Browser)"
      },
      {
        "command": "opengrok-navigator.searchInView",
        "title": "Search Current Project in OpenGrok (VS Code)"
      },
      {
        "command": "opengrok-navigator.searchAllProjects",
        "title": "Search All Projects in OpenGrok (Browser)"
      },
      {
        "command": "opengrok-navigator.clearSearchResults",
        "title": "Clear OpenGrok Search Results",
        "icon": "$(close)"
      },
      {
        "command": "opengrok-navigator.clearPassword",
        "title": "Clear Stored OpenGrok Password"
      }
    ],
    "keybindings": [
      {
        "command": "opengrok-navigator.openInOpenGrok",
        "key": "ctrl+shift+g o",
        "mac": "cmd+shift+g o",
        "when": "editorTextFocus"
      },
      {
        "command": "opengrok-navigator.copyOpenGrokUrl",
        "key": "ctrl+shift+g c",
        "mac": "cmd+shift+g c",
        "when": "editorTextFocus"
      },
      {
        "command": "opengrok-navigator.searchInOpenGrok",
        "key": "ctrl+shift+g s",
        "mac": "cmd+shift+g s",
        "when": "editorTextFocus"
      },
      {
        "command": "opengrok-navigator.searchInView",
        "key": "ctrl+shift+g v",
        "mac": "cmd+shift+g v",
        "when": "editorTextFocus"
      },
      {
        "command": "opengrok-navigator.searchAllProjects",
        "key": "ctrl+shift+g a",
        "mac": "cmd+shift+g a",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "opengrok-navigator.openInOpenGrok",
          "when": "editorTextFocus",
          "group": "navigation@1"
        },
        {
          "command": "opengrok-navigator.copyOpenGrokUrl",
          "when": "editorTextFocus",
          "group": "navigation@2"
        },
        {
          "command": "opengrok-navigator.searchInOpenGrok",
          "when": "editorTextFocus",
          "group": "navigation@3"
        },
        {
          "command": "opengrok-navigator.searchInView",
          "when": "editorTextFocus",
          "group": "navigation@4"
        },
        {
          "command": "opengrok-navigator.searchAllProjects",
          "when": "editorTextFocus",
          "group": "navigation@5"
        }
      ],
      "view/title": [
        {
          "command": "opengrok-navigator.clearSearchResults",
          "when": "view == opengrokSearchResults",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "opengrokSearchResults",
          "name": "OpenGrok Search"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "opengrokSearchResults",
        "contents": "No search results yet.\n[Search in OpenGrok](command:opengrok-navigator.searchInView)"
      }
    ],
    "configuration": {
      "title": "OpenGrok Navigator",
      "properties": {
        "opengrok-navigator.baseUrl": {
          "type": "string",
          "default": "http://localhost:8080/source",
          "description": "Base URL of your OpenGrok instance (e.g., http://opengrok.example.com/source)"
        },
        "opengrok-navigator.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Optional: Project root path in OpenGrok if different from workspace root"
        },
        "opengrok-navigator.useIntegratedBrowser": {
          "type": "boolean",
          "default": false,
          "description": "Open OpenGrok links in VS Code's built-in Simple Browser instead of external browser"
        },
        "opengrok-navigator.useTopLevelFolder": {
          "type": "boolean",
          "default": false,
          "description": "Use the top-level folder name (within workspace) as the OpenGrok project name instead of the workspace name. Useful for workspaces containing multiple projects."
        },
        "opengrok-navigator.authEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable HTTP Basic Authentication for OpenGrok requests"
        },
        "opengrok-navigator.authUsername": {
          "type": "string",
          "default": "",
          "description": "Username for HTTP Basic Authentication (password stored securely)"
        },
        "opengrok-navigator.rejectUnauthorized": {
          "type": "boolean",
          "default": true,
          "description": "Verify SSL certificates. Disable for self-signed certificates (not recommended for production)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
